@model mcv.Models.ViewModel.UserViewModel
@{
    ViewBag.Title = "Agregar Usuario";
}


<div class="container jumbotron">
    <h2 class="text-center">@ViewBag.Title</h2>
    @{
        if (ViewBag.mensaje != "")
        {
            <div class="alert alert-warning alert-dismissible mt-4 mb-4">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @ViewBag.mensaje
            </div>
        }
    }
    @using (Html.BeginForm("Add", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationMessage("error", new { @class = "alert-danger" })

        @Html.LabelFor(us => us.Correo)
        @Html.TextBoxFor(us => us.Correo, new { @class = "form-control" })
        @Html.ValidationMessage("Correo", new { @class = "text-danger" })<br />

        @Html.LabelFor(us => us.Password)
        @Html.PasswordFor(us => us.Password, new { @class = "form-control" })
        @Html.ValidationMessage("Password", new { @class = "text-danger" })<br />

        @Html.LabelFor(us => us.ConfirPassword)
        @Html.PasswordFor(us => us.ConfirPassword, new { @class = "form-control" })
        @Html.ValidationMessage("ConfirPassword", new { @class = "text-danger" })<br />

        <div class="text-center"><input type="submit" class="btn btn-success" value="Guardar usuario" /></div>

    }
<button class="btn btn-info" onclick="document.location.href = '@Url.Content("~/Users/Index/")'">
    <i class="fas fa-long-arrow-alt-left"></i> Regresar
</button>
</div>

